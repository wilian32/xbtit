    </operation>
    <operation>
      <action>"sql"</action>
      <data><![CDATA[INSERT INTO `{$db_prefix}blocks` ( `blockid` , `content` , `position` , `sortid` , `status` , `title` , `cache` , `minclassview` , `maxclassview` ) VALUES (NULL , 'lasttorrentmarq', 'c', '0', '1', 'BLOCK_LASTTORRENT_MARQ', '', '3', '8');]]></data>
    </operation>
